            <div class="resposta-contato">
                {{ flashMessage }}
            </div>
        {% endfor %}
        <div id="caixa-form-contato">
            <form id="formContato" action="{{ path('vostre_site_contato') }}" 
                  method="post" {{ form_enctype(form) }}>
{#                {{ form_label(form.field, form.field.vars.label|trans) }}#}
                {{ form_widget(form) }}
                <input type="submit" id="submit-contato" 
                       value="{% trans %}forms.contato.submit{% endtrans %}" />
            </form>
        </div>
        <p style="text-align: center">{% trans %}contato.email{% endtrans %} 
            <a class="links" href="mailto:contato@vostre.com.br">contato@vostre.com.br</a> 
